.boxScroll {
    overflow: auto;
    min-height: 1px; /* Firefox needs min-height and min-width to show scrollbars */
    min-width: 1px;
    height: 100%; /* IE6 needs height and width properties */
    width: 100%;
}


/* *************************************************************************************************
 Flexible Box fixes
************************************************************************************************* */

.boxFix,
.boxFix .vbox,
.boxFix .hbox {
    position: relative;
}

.boxFix .boxFixPos {
    display: block;
    height: 100%;
    width: 100%;
    position: absolute;
}

.boxFixHideContents * {
    display: none;
}

